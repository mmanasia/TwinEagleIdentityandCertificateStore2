<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>Member Groups</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <BR>

  <table>
    <thead>
    <tr>
      <th>Network Email</th>
      <th>User Group Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>


    <tbody>
    <% @member_groups.each do |member_group| %>
        <tr>
          <td><%= member_group.user.email %></td>
          <td><%= member_group.user_group.UserGroupName %></td>
          <td><%= link_to 'View Details', member_group %></td>


          <% if policy(member_group).update? %>
              <td><%= link_to 'Update', edit_member_group_path(member_group) %></td>
        <% end %>

          <% if policy(member_group).destroy? %>
              <td><%= link_to 'Delete', member_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(member_group).new? %>
              <td><%= link_to 'Create New Member Group', new_member_group_path(member_group) %></td>
          <% end %>

    <% end %>
    </tbody>
  </table>

</div>
