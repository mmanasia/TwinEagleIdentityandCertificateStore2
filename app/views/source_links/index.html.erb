<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>Source Links</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <a class="btn btn-primary btn-sm" href="http://localhost:3000/source_links/new" role="button">Create New Source Link</a>

  <BR><BR>

  <table>
    <thead>
    <tr>
      <th>Hyperlink</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @source_links.each do |source_link| %>
        <tr>
          <td><%= source_link.Hyperlink %></td>

          <% if policy(source_link).update? %>
              <td><%= link_to 'Update', edit_source_link_path(source_link) %></td>
          <% end %>

          <% if policy(source_link).destroy? %>
              <td><%= link_to 'Delete', source_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
