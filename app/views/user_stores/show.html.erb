<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">User Store Source Links</h3>
  </div>
  <div class="panel-body">

    <div style="overflow-x:auto;">
      <style>
        table {
          border-collapse: collapse;
          width: 100%;
        }

        th, td {
          text-align: center;
          padding: 8px;
        }

        tr:nth-child(even){background-color: #f2f2f2}
      </style>

      <a class="btn btn-primary btn-sm" href="http://localhost:3000/source_links/new" role="button">Add Source Link</a>
      <BR><BR>

      <table>
        <thead>
        <tr>
          <th>Hyperlink</th>
          <th colspan="3"></th>
        </tr>
        </thead>



        <tbody>
        <% @user_store.user_source_links.each do |user_source_link| %>
            <tr>
              <td><%= user_source_link.source_link.Hyperlink %></td>
              <td><%= link_to 'View', user_source_link %></td>
              <td><%= link_to 'Update', edit_user_source_link_path(user_source_link) %></td>
              <td><%= link_to 'Delete', user_source_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <br>
  </div>
</div>


