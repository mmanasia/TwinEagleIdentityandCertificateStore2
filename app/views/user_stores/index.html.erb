<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>User Store</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>


  <BR>

  <table>
    <thead>
    <tr>
      <th>User Store Name</th>
      <th>User Store Expiration Date</th>
      <th>Source Description</th>
      <th>Environment Name</th>
      <th>Identity Type Name</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @user_stores.each do |user_store| %>
        <tr>
          <td><%= user_store.UserStoreName %></td>
          <td><%= user_store.UserStoreExpirationDate %></td>
          <td><%= user_store.source.SourceDescription %></td>
          <td><%= user_store.environment.EnvironmentName %></td>
          <td><%= user_store.identity_type.IdentityTypeName %></td>
          <td><%= link_to 'View Details', user_store %></td>

          <% if policy(user_store).update? %>
              <td><%= link_to 'Update', edit_user_store_path(user_store) %></td>
          <% end %>

          <% if policy(user_store).destroy? %>
              <td><%= link_to 'Delete', user_store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(user_store).new? %>
              <td><%= link_to 'Create New User Store', new_user_store_path(user_store) %></td>
          <% end %>


        </tr>
    <% end %>
    </tbody>
  </table>
</div>