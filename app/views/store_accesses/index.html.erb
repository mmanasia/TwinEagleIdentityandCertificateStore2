<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>Store Accesses</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>


  <BR>


  <table>
    <thead>
    <tr>
      <th>User Store Name</th>
      <th>Certificate Name</th>
      <th>Network ID</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @store_accesses.each do |store_access| %>
        <tr>
          <td><%= store_access.user_store.UserStoreName %></td>
          <td><%= store_access.cert_store.CertStoreName %></td>
          <td><%= store_access.NetworkId %></td>
          <td><%= link_to 'View Details', store_access %></td>


          <% if policy(store_access).update? %>
              <td><%= link_to 'Update', edit_store_access_path(store_access) %></td>
          <% end %>

          <% if policy(store_access).destroy? %>
              <td><%= link_to 'Delete', store_access, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(store_access).new? %>
              <td><%= link_to 'Create New Store Access', new_store_access_path(store_access) %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>
