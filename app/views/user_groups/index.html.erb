<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>User Groups</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <a class="btn btn-primary btn-sm" href="http://localhost:3000/user_groups/new" role="button">Create New User Group</a>

  <BR><BR>

  <table>
    <thead>
    <tr>
      <th>User Group Name</th>
      <th>Admin?</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @user_groups.each do |user_group| %>
        <tr>
          <td><%= user_group.UserGroupName %></td>
          <td><%= user_group.admin %></td>

          <% if policy(user_group).update? %>
              <td><%= link_to 'Update', edit_user_group_path(user_group) %></td>
          <% end %>

          <% if policy(user_group).destroy? %>
              <td><%= link_to 'Delete', user_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
