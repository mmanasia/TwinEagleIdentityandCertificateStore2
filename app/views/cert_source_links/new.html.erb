<h1>New Certificate Source Link</h1>

<%= form_for(@cert_source_link) do |f| %>
    <% if @cert_source_link.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@cert_source_link.errors.count, "error") %> prohibited this cert_source_link from being saved:</h2>

          <ul>
            <% @cert_source_link.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :'Certificate Name' %><br>
      <%= f.collection_select :cert_store_id, CertStore.all, :id, :CertStoreName, include_blank:true %>
    </div>
    <div class="field">
      <%= f.label :'Hyperlink' %><br>
      <%= f.collection_select :source_link_id, SourceLink.all, :id, :Hyperlink, include_blank:true %>
    </div>
    <div class="field">
      <%= f.label :'Created by' %><br>
      <%= f.text_field :CreatedBy %>
    </div>
    <div class="field">
      <%= f.label :'Created Date' %><br>
      <%= f.datetime_select :CreatedDate %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', cert_source_links_path %>
