<h1>Certificate Source Links</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <table>
    <thead>
    <tr>
      <th>Certificate Name</th>
      <th>Hyperlink</th>
      <th colspan="3"></th>
    </tr>
    </thead>



    <tbody>
    <% @cert_source_links.each do |cert_source_link| %>
        <tr>
          <td><%= cert_source_link.CertStore.CertStoreName %>
          <td><%= cert_source_link.SourceLink.Hyperlink %></td>
          <td><%= link_to 'View', cert_store_link %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
