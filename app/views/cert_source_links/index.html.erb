<h1>Certificate Source Links</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <BR><BR>

  <table>
    <thead>
    <tr>
      <th>Certificate Name</th>
      <th>Hyperlink</th>
      <th colspan="3"></th>
    </tr>
    </thead>



    <tbody>
    <% @cert_source_links.each do |cert_source_link| %>
        <tr>
          <td><%= cert_source_link.cert_store.CertStoreName %>
          <td><%= cert_source_link.source_link.Hyperlink %></td>
          <td><%= link_to 'View Details', cert_source_link %></td>

          <% if policy(cert_source_link).update? %>
              <td><%= link_to 'Update', edit_cert_source_link_path(cert_source_link) %></td>
        <% end %>

          <% if policy(cert_source_link).destroy? %>
              <td><%= link_to 'Delete', cert_source_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(cert_source_link).new? %>
              <td><%= link_to 'Create New Certificate Source Link', new_cert_source_link_path(cert_source_link) %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>
