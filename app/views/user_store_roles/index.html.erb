<h1>User Store Roles</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>


  <BR>

  <table>
    <thead>
    <tr>
      <th>User Store Name</th>
      <th>Role Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @user_store_roles.each do |user_store_role| %>
        <tr>
          <td><%= user_store_role.user_store.UserStoreName %></td>
          <td><%= user_store_role.role.RoleDescription %></td>
          <td><%= link_to 'View Details', user_store_role %></td>

          <% if policy(user_store_role).update? %>
              <td><%= link_to 'Update', edit_user_store_role_path(user_store_role) %></td>
          <% end %>

          <% if policy(user_store_role).destroy? %>
              <td><%= link_to 'Delete', user_store_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(user_store_role).new? %>
              <td><%= link_to 'Create New User Store Role', new_user_store_role_path(user_store_role) %></td>
          <% end %>

          <% if policy(user_store_role).new? %>
              <td><%= link_to 'Create New User Store Role', new_user_store_role_path(user_store_role) %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>
