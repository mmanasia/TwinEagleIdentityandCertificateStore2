<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-body">
<p>
  <strong>Certificate Name:</strong>
  <%= @cert_store.CertStoreName %>
</p>

<p>
  <strong>Certificate Description:</strong>
  <%= @cert_store.CertStoreDescription %>
</p>

    <div class="panel panel-default">
      <div class="panel-body">
<p>
  <strong>Certificate Password:</strong>
  <%= @cert_store.CertStorePassword %>
</p>

<p>
  <strong>Certificate Expiration Date:</strong>
  <%= @cert_store.CertStoreExpirationDate %>
</p>

<p>
  <strong>Certificate File:</strong>
  <%= link_to 'Download Certificate', @cert_store.unc_url %>
</p>
        </div>
      </div>

<p>
  <strong>Mime Type:</strong>
  <%= @cert_store.MimeType %>
</p>

<p>
  <strong>Source Description:</strong>
  <%= @cert_store.source.SourceDescription %>
</p>

<p>
  <strong>Environment Name:</strong>
  <%= @cert_store.environment.EnvironmentName %>
</p>

<p>
  <strong>Identity Type Name:</strong>
  <%= @cert_store.identity_type.IdentityTypeName %>
</p>
  </div>
  </div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Certificate Source Links</h3>
  </div>
  <div class="panel-body">

    <div style="overflow-x:auto;">
      <style>
        table {
          border-collapse: collapse;
          width: 100%;
        }

        th, td {
          text-align: center;
          padding: 8px;
        }

        tr:nth-child(even){background-color: #f2f2f2}
      </style>

      <a class="btn btn-primary btn-sm" href="http://localhost:3000/source_links/new" role="button">Add Source Link</a>
      <BR><BR>

      <table>
        <thead>
        <tr>
          <th>Hyperlink</th>
          <th colspan="3"></th>
        </tr>
        </thead>



        <tbody>
        <% @cert_store.cert_source_links.each do |cert_source_link| %>
            <tr>
              <td><%= cert_source_link.source_link.Hyperlink %></td>
              <td><%= link_to 'View', cert_source_link %></td>
              <td><%= link_to 'Update', edit_cert_source_link_path(cert_source_link) %></td>
              <td><%= link_to 'Delete', cert_source_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <br>
  </div>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Certificate Roles</h3>
  </div>
  <div class="panel-body">

    <div style="overflow-x:auto;">
      <style>
        table {
          border-collapse: collapse;
          width: 100%;
        }

        th, td {
          text-align: center;
          padding: 8px;
        }

        tr:nth-child(even){background-color: #f2f2f2}
      </style>

      <a class="btn btn-primary btn-sm" href="http://localhost:3000/roles/new" role="button">Add Role</a>
      <BR><BR>

      <table>
        <thead>
        <tr>
          <th>Role Description</th>
          <th colspan="3"></th>
        </tr>
        </thead>



        <tbody>
        <% @cert_store.cert_store_roles.each do |cert_store_role| %>
            <tr>
              <td><%= cert_store_role.role.RoleDescription %></td>
              <td><%= link_to 'View', cert_store_role %></td>
              <td><%= link_to 'Update', edit_cert_store_role_path(cert_store_role) %></td>
              <td><%= link_to 'Delete', cert_store_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <br>
  </div>

</div>

<div class="panel panel-default">
  <div class="panel-body">
    <p>
      <strong>Created By:</strong>
