<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>Sources</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <a class="btn btn-primary btn-sm" href="http://localhost:3000/sources/new" role="button">Create New Source</a>

  <BR><BR>

  <table>
    <thead>
    <tr>
      <th>Source Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @sources.each do |source| %>
        <tr>
          <td><%= source.SourceDescription %></td>
          <td><%= link_to 'View', source %></td>
          <td><%= link_to 'Update', edit_source_path(source) %></td>
          <td><%= link_to 'Delete', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
