<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>Sources</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>


  <BR><BR>

  <table>
    <thead>
    <tr>
      <th>Source Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @sources.each do |source| %>
        <tr>
          <td><%= source.SourceDescription %></td>
          <td><%= link_to 'View Details', source %></td>


          <% if policy(source).update? %>
              <td><%= link_to 'Update', edit_source_path(source) %></td>
          <% end %>

          <% if policy(source).destroy? %>
              <td><%= link_to 'Delete', source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(source).new? %>
              <td><%= link_to 'Create New Source', new_source_path(source) %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>
