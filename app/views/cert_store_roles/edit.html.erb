<h1>Editing Certificate Role</h1>

<%= form_for(@cert_store_role) do |f| %>
    <% if @cert_store_role.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@cert_store_role.errors.count, "error") %> prohibited this cert_store_role from being saved:</h2>

          <ul>
            <% @cert_store_role.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :'Certificate Name' %><br>
      <%= f.collection_select :cert_store_id, CertStore.all, :id, :CertStoreName, include_blank:true %>
    </div>
    <div class="field">
      <%= f.label :'Role Description' %><br>
      <%= f.collection_select :role_id, Role.all, :id, :RoleDescription, include_blank:true %>
    </div>
    <div class="field">
      <%= f.label :'Last Modified By' %><br>
      <%= f.text_field :LastModifiedBy %>
    </div>
    <div class="field">
      <%= f.label :'Last Modified Date' %><br>
      <%= f.date_select :LastModifiedDate %>
    </div>
    <div class="field">
      <%= f.label :'Is Deleted' %><br>
      <%= f.check_box :IsDeleted %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Show', @cert_store_role %> |
<%= link_to 'Back', cert_store_roles_path %>
