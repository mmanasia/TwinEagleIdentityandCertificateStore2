<h1>Certificate Store Roles</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <BR>

  <table>
    <thead>
    <tr>
      <th>Certificate Name</th>
      <th>Role Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>



    <tbody>
    <% @cert_store_roles.each do |cert_store_role| %>
        <tr>
          <td><%= cert_store_role.cert_store.CertStoreName %></td>
          <td><%= cert_store_role.role.RoleDescription %></td>
          <td><%= link_to 'View Details', cert_store_role %></td>

          <% if policy(cert_store_role).update? %>
              <td><%= link_to 'Update', edit_cert_store_role_path(cert_store_role) %></td>
        <% end %>

          <% if policy(cert_store_role).destroy? %>
              <td><%= link_to 'Delete', cert_store_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(cert_store_role).new? %>
              <td><%= link_to 'Create New Certificate Role', new_cert_store_role_path(cert_store_role) %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>
