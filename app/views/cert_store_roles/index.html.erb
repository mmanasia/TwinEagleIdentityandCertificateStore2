<h1>Certificate Store Roles</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <%= link_to 'Create New Certificate Role', new_cert_store_role_path %>

  <table>
    <thead>
    <tr>
      <th>Certificate Name</th>
      <th>Role Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>



    <tbody>
    <% @cert_store_roles.each do |cert_store_role| %>
        <tr>
          <td><%= cert_store_role.CertStore.CertStoreName %></td>
          <td><%= cert_store_role.Role.RoleDescription %></td>
          <td><%= link_to 'View', cert_store_role %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
