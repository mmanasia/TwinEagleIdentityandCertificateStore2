<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>Network Users</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <BR>

  <table>
    <thead>
    <tr>
      <th>Network Email</th>
      <th>Network Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>User Group</th>
      <th colspan="3"></th>
    </tr>
    </thead>


    <tbody>
    <% @users = User.all %>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.username %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.user_group.UserGroupName %></td>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>

