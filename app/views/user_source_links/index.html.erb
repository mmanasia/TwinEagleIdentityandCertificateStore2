<h1>User Source Links</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <%= link_to 'Create New User Source Link', new_user_source_link_path %>

  <table>
    <thead>
    <tr>
      <th>User Store Name</th>
      <th>Hyperlink</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @user_source_links.each do |user_source_link| %>
        <tr>
          <td><%= user_source_link.UserStore.UserStoreName %></td>
          <td><%= user_source_link.SourceLink.Hyperlink %></td>
          <td><%= link_to 'View', user_source_link %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
