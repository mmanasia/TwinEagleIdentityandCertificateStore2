<h1>User Store Source Links</h1>
<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>


  <BR><BR>

  <table>
    <thead>
    <tr>
      <th>User Store Name</th>
      <th>Hyperlink</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @user_source_links.each do |user_source_link| %>
        <tr>
          <td><%= user_source_link.user_store.UserStoreName %></td>
          <td><%= user_source_link.source_link.Hyperlink %></td>
          <td><%= link_to 'View Details', user_source_link %></td>

          <% if policy(user_source_link).update? %>
              <td><%= link_to 'Update', edit_user_source_link_path(user_source_link) %></td>
          <% end %>

          <% if policy(user_source_link).destroy? %>
              <td><%= link_to 'Delete', user_source_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

          <% if policy(user_source_link).new? %>
              <td><%= link_to 'Create New User Source Link', new_user_source_link_path(user_source_link) %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>
