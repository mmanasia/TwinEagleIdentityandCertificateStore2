<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>Roles</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <%= link_to 'Create New Role', new_role_path %>

  <table>
    <thead>
    <tr>
      <th>Role Description</th>
      <th>Source Description</th>
      <th>Created By</th>
      <th>Created Date</th>
      <th>Last Modified By</th>
      <th>Last Modified Date</th>
      <th>Is Deleted</th>
      <th colspan="3"></th>
    </tr>
    </thead>


    <tbody>
    <% @roles.each do |role| %>
        <tr>
          <td><%= role.RoleDescription %>
          <td><%= role.Source.SourceDescription %></td>
          <td><%= link_to 'View', role %></td>
          <td><%= link_to 'Update', edit_role_path(role) %></td>
          <td><%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
