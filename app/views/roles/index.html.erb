<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>


<h1>Roles</h1>

<div style="overflow-x:auto;">
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      text-align: center;
      padding: 8px;
    }

    tr:nth-child(even){background-color: #f2f2f2}
  </style>

  <a class="btn btn-primary btn-sm" href="http://localhost:3000/roles/new" role="button">Create New Role</a>

  <BR><BR>

  <table>
    <thead>
    <tr>
      <th>Source Description</th>
      <th>Role Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>


    <tbody>
    <% @roles.each do |role| %>
        <tr>
          <td><%= role.source.SourceDescription %></td>
          <td><%= role.RoleDescription %>
          <td><%= link_to 'View', role %></td>

          <% if policy(role).update? %>
              <td><%= link_to 'Update', edit_role_path(role) %></td>
          <% end %>

          <% if policy(role).destroy? %>
              <td><%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<br>
