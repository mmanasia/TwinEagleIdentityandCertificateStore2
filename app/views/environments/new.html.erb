<h1>New Environment</h1>

<%= form_for(@environment) do |f| %>
    <% if @environment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@environment.errors.count, "error") %> prohibited this environment from being saved:</h2>

          <ul>
            <% @environment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :'Environment Name' %><br>
      <%= f.text_area :EnvironmentName, :cols => "40", :rows => "0" %>
    </div>
    <div class="field">
      <%= f.label :'Environment Description' %><br>
      <%= f.text_area :EnvironmentDescription, :cols => "40", :rows => "5" %>
    </div>
    <div class="field">
      <%= f.label :'Created By' %><br>
      <%= f.text_field :CreatedBy %>
    </div>
    <div class="field">
      <%= f.label :'Created Date' %><br>
      <%= f.datetime_select :CreatedDate %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', environments_path %>
